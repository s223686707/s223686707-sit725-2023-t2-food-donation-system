<main>
	<%- include('../partials/adminSidebar') %>
  
	<style>
	  .card {
		transition: transform 0.3s;
		border: none;
		border-radius: 15px;
		background-color: rgba(0, 0, 0, 0.5);
	  }
  
	  .card:hover {
		transform: translateY(-10px);
	  }
  
	  .icon {
		font-size: 2rem;
	  }
  
	  .card-title {
		font-size: 1.25rem;
	  }
  
	  .card-body {
		padding: 2rem;
		display: flex;
		flex-direction: column;
		align-items: center;
	  }
  
	  .card-body .fs-1 {
		font-size: 2.5rem;
	  }
	</style>
  
	<div id="main-wrapper" class="p-4">
		<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span><br>
		<br>
  
	  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
		<% const cards = [
		  { num: numAdmins, label: 'Admins', color: 'bg-primary', icon: 'fas fa-user-cog' },
		  { num: numDonors, label: 'Donors', color: 'bg-success', icon: 'fas fa-hand-holding-heart' },
		  { num: numAgents, label: 'Agents', color: 'bg-info', icon: 'fas fa-user-secret' },
		  { num: numPendingDonations, label: 'New Donation Requests', color: 'bg-warning', icon: 'fas fa-hands-helping' },
		  { num: numAcceptedDonations, label: 'Donations to be Assigned', color: 'bg-secondary', icon: 'fas fa-tasks' },
		  { num: numAssignedDonations, label: 'Donations Not Collected', color: 'bg-danger', icon: 'fas fa-box-open' },
		  { num: numCollectedDonations, label: 'Collected Donations', color: 'bg-primary', icon: 'fas fa-gift' }
		]; %>
  
		<% cards.forEach(card => { %>
		  <div class="col">
			<div class="card h-100 shadow <%= card.color %> text-white">
			  <div class="card-body text-center">
				<i class="<%= card.icon %> icon"></i>
				<h5 class="card-title mt-3"><%= card.label %></h5>
				<div class="fs-1 mb-2"><%= card.num %></div>
			  </div>
			</div>
		  </div>
		<% }); %>
	  </div>
	</div>
  </main>
  